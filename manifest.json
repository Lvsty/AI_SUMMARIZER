{
  "manifest_version": 3,
  "name": "AI Summary",
  "version": "1.0",
  "permissions": ["scripting","activeTab","storage","tabs"],

  
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "options_page": "option.html",
  "host_permissions": ["*://*/*"]

}
